<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>@(ViewData["Title"] ?? "Developer Admin")</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13b6ec",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101d22",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>

    <style>
        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 min-h-screen flex overflow-hidden">

    <!-- Fixed Vertical Sidebar -->
    <aside class="w-64 flex-shrink-0 bg-white dark:bg-[#111618] border-r border-slate-200 dark:border-[#283539] flex flex-col h-screen">
        <div class="p-6 flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-background-dark font-bold text-xl">
                JD
            </div>
            <div class="flex flex-col">
                <h1 class="text-sm font-bold leading-tight">Senior .NET Dev</h1>
                <p class="text-xs text-slate-500 dark:text-[#9db2b9]">Admin Portalı</p>
            </div>
        </div>
        <nav class="flex-1 px-4 py-2 space-y-1 overflow-y-auto">
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">dashboard</span>
                <span class="text-sm font-medium">Gösterge Paneli</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">person</span>
                <span class="text-sm font-medium">Hakkımda</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">psychology</span>
                <span class="text-sm font-medium">Yetenekler</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">work</span>
                <span class="text-sm font-medium">Deneyimler</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary/10 dark:bg-primary/20 text-primary transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]" style="font-variation-settings: 'FILL' 1">files</span>
                <span class="text-sm font-bold">Projeler</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">school</span>
                <span class="text-sm font-medium">Eğitim</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">verification</span>
                <span class="text-sm font-medium">Sertifikalar</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">description</span>
                <span class="text-sm font-medium">Blog</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors" href="#">
                <span class="material-symbols-outlined text-[22px]">mail</span>
                <span class="text-sm font-medium">Mesajlar</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition-colors mt-auto" href="#">
                <span class="material-symbols-outlined text-[22px]">settings</span>
                <span class="text-sm font-medium">Ayarlar</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col min-w-0 bg-background-light dark:bg-background-dark overflow-hidden">

        <!-- Top Navbar -->
        <header class="h-16 flex items-center justify-between px-8 bg-white dark:bg-[#111618] border-b border-slate-200 dark:border-[#283539] z-10">
            <div class="flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">terminal</span>
                <h2 class="text-lg font-bold tracking-tight">Developer Admin Paneli</h2>
            </div>

            <div class="flex items-center gap-6">
                <div class="flex items-center gap-3 pl-4 border-l border-slate-200 dark:border-[#283539]">
                    <div class="text-right hidden sm:block">
                        <p class="text-xs font-bold">Hatice İrem Demir</p>
                        <p class="text-[10px] text-primary">Senior Developer</p>
                    </div>

                    <div class="w-10 h-10 rounded-full bg-slate-200 bg-cover bg-center"
                         style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuCHbt4yI-strfVEuX0x8SAH4oMcokffsW8B0GDt_2uhoIKCbC4WglxcrR5FQjO2PnwAfuwPggUnbOtOE0InF8n8RXTqEfAZuW');">
                    </div>
                </div>
            </div>
        </header>

        <!-- Scrollable Page Content -->
        <div class="flex-1 overflow-y-auto p-8">
            @RenderBody()
        </div>

        <div class="fixed bottom-8 right-8 lg:hidden">
            <button class="w-14 h-14 rounded-full bg-primary text-white shadow-lg flex items-center justify-center">
                <span class="material-symbols-outlined">add</span>
            </button>
        </div>
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
