@using ResumeProjectDemo.Entities
@model About
@{
    var name = Model?.NameSurname ?? "Hatice Ä°rem Demir";
    var title = Model?.Title ?? "Developer";
    var img = !string.IsNullOrWhiteSpace(Model?.ImageUrl) ? Model.ImageUrl : "/images/profile.jpg";
    var letter = !string.IsNullOrEmpty(name) ? name[0].ToString().ToUpperInvariant() : "P";
}

<div id="page-cover" class="page-cover">
	<div class="page-cover-wrapper-fixed">
		<div class="page-cover-bg">
			<div class="overlay-inner bg-dark opacity-55"></div>
		</div>
		<div class="page-cover-wrap">

			<section id="home" class="d-flex min-vh-100">
				<div class="container align-self-center text-white text-center">
					<div class="avatar avatar-xxl mb-6">
						<div class="avatar-shape avatar-shape-rounded bg-white mt-n2 mb-n2 mr-n2"></div>
						<img src="@img" alt="" class="avatar-img rounded-circle shadow-light">
					</div>
					<h1 class="mb-2 mb-lg-3">@name</h1>
					<p class="lead mb-0">@title</p>
					<span class="cover-letter letter-xl text-white opacity-10">@letter</span>
				</div>
			</section>

		</div>
	</div>
</div>