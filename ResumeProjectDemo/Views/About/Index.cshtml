@model List<ResumeProjectDemo.Entities.About>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-card-dark rounded-xl border border-slate-800 p-6">
    <div class="flex justify-between items-center mb-4">
        <h3 class="text-white text-xl font-bold">Hakkımda Bilgileri</h3>
        <a href="/About/CreateAbout" class="bg-primary text-white px-4 py-2 rounded-lg text-sm hover:bg-primary/80 transition-colors">Yeni Ekle</a>
    </div>

    <table class="w-full text-left text-slate-300">
        <thead>
            <tr class="border-b border-slate-800 text-slate-400">
                <th class="p-4">Başlık</th>
                <th class="p-4">Açıklama</th>
                <th class="p-4 text-right">İşlem</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr class="border-b border-slate-800/50">
                        <td class="p-4 text-white">@item.Title</td>
                        <td class="p-4 text-sm">@item.Description</td>
                        <td class="p-4 text-right">
                            <a href="/About/UpdateAbout/@item.AboutID" class="text-primary hover:underline">Düzenle</a>
                            <span class="text-slate-600 mx-2">|</span>
                            <a href="/About/DeleteAbout/@item.AboutID" class="text-red-500 hover:underline" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>