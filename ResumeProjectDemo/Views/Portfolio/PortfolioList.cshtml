@model List<ResumeProjectDemo.Entities.Portfolio>

@{
    ViewData["Title"] = "Proje Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-[#111618] rounded-xl border border-slate-800 p-6">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h3 class="text-white text-xl font-bold">Proje Listesi</h3>
            <p class="text-slate-400 text-sm">Tüm projelerinizi buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Portfolio/CreatePortfolio/" class="bg-primary hover:bg-primary/80 text-white px-4 py-2 rounded-lg text-sm transition-all flex items-center gap-2">
            <span class="material-symbols-outlined text-sm">add</span>
            Yeni Proje Ekle
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left text-slate-300">
            <thead>
                <tr class="border-b border-slate-800 text-slate-400 uppercase text-xs tracking-wider">
                    <th class="p-4">#</th>
                    <th class="p-4">Proje Başlığı</th>
                    <th class="p-4">Kategori</th>
                    <th class="p-4 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="border-b border-slate-800/50 hover:bg-slate-800/30 transition-colors">
                            <td class="p-4 text-slate-500">@item.PortfolioId</td>
                            <td class="p-4">
                                <div class="flex items-center gap-3">
                                    <img src="@item.ImageUrl" class="w-10 h-10 rounded shadow-lg object-cover bg-slate-800" onerror="this.src='/images/portfolio/default.jpg'" />
                                    <span class="text-white font-medium">@item.Title</span>
                                </div>
                            </td>
                            <td class="p-4">
                                <span class="bg-primary/10 text-primary text-xs px-2 py-1 rounded border border-primary/20">
                                    @(item.Category != null ? item.Category.CategoryName : "Kategori Yok")
                                </span>
                            </td>
                            <td class="p-4 text-right space-x-2">
                                <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="text-blue-400 hover:text-white transition-colors text-sm">Düzenle</a>
                                <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="text-red-500 hover:text-red-400 transition-colors text-sm" onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?')">Sil</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="p-10 text-center text-slate-500 italic">
                            Henüz proje eklenmemiş.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>