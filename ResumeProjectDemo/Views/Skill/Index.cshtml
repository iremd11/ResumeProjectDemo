@model List<ResumeProjectDemo.Entities.Skill>
@{
    ViewData["Title"] = "Yetenekler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-slate-800 dark:text-white">Yetenekler</h1>
            <p class="text-slate-600 dark:text-slate-300 mt-1">Yetenek ve teknoloji bilgilerinizi yönetin</p>
        </div>
        <a href="@Url.Action("CreateSkill", "Skill")" class="bg-primary hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors inline-flex items-center gap-2">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Yetenek Ekle
        </a>
    </div>

    <div class="bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] rounded-xl shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50">
                        <th class="p-4 font-medium text-slate-600 dark:text-slate-400">#</th>
                        <th class="p-4 font-medium text-slate-600 dark:text-slate-400">Yetenek Başlığı</th>
                        <th class="p-4 font-medium text-slate-600 dark:text-slate-400">Başarı Oranı</th>
                        <th class="p-4 text-right font-medium text-slate-600 dark:text-slate-400">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="border-b border-slate-200 dark:border-slate-700/50 hover:bg-slate-50 dark:hover:bg-slate-800/30 transition-colors">
                                <td class="p-4 text-slate-800 dark:text-white font-medium">@item.SkillId</td>
                                <td class="p-4 text-slate-800 dark:text-white font-bold">@item.Title</td>
                                <td class="p-4">
                                    <div class="flex items-center gap-3 max-w-[200px]">
                                        <div class="flex-1 h-2.5 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
                                            <div class="h-full bg-primary rounded-full transition-all duration-500" style="width: @item.Value%"></div>
                                        </div>
                                        <span class="text-sm font-medium text-slate-600 dark:text-slate-300 w-10">@item.Value%</span>
                                    </div>
                                </td>
                                <td class="p-4 text-right">
                                    <a href="@Url.Action("UpdateSkill", "Skill", new { id = item.SkillId })" class="text-primary hover:underline text-sm font-medium mr-3">Düzenle</a>
                                    <a href="@Url.Action("DeleteSkill", "Skill", new { id = item.SkillId })" onclick="return confirm('Bu yeteneği silmek istediğinize emin misiniz?');" class="text-red-500 hover:underline text-sm font-medium">Sil</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="p-12 text-center text-slate-500 dark:text-slate-400">
                                <span class="material-symbols-outlined text-4xl mb-2 block opacity-50">psychology</span>
                                Henüz hiç yetenek eklenmemiş.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
