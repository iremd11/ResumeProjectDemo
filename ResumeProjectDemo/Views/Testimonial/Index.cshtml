@model List<ResumeProjectDemo.Entities.Testimonial>
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-slate-800 dark:text-white">Referanslar</h1>
            <p class="text-slate-600 dark:text-slate-300 mt-1">Müşteri ve iş ortakı yorumlarını yönetin</p>
        </div>
        <a href="@Url.Action("CreateTestimonial", "Testimonial")" class="bg-primary hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors inline-flex items-center gap-2">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Referans Ekle
        </a>
    </div>

    <div class="bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] rounded-xl shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50">
                        <th class="p-4 font-medium text-slate-600 dark:text-slate-400">#</th>
                        <th class="p-4 font-medium text-slate-600 dark:text-slate-400">Ad Soyad</th>
                        <th class="p-4 font-medium text-slate-600 dark:text-slate-400">Ünvan / Şirket</th>
                        <th class="p-4 font-medium text-slate-600 dark:text-slate-400">Yayın</th>
                        <th class="p-4 text-right font-medium text-slate-600 dark:text-slate-400">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="border-b border-slate-200 dark:border-slate-700/50 hover:bg-slate-50 dark:hover:bg-slate-800/30 transition-colors">
                                <td class="p-4">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.NameSurname" class="w-10 h-10 rounded-full object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-10 h-10 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center text-slate-500">
                                                <span class="material-symbols-outlined text-[20px]">person</span>
                                            </div>
                                        }
                                        <span class="text-slate-800 dark:text-white font-medium">@item.TestimonialId</span>
                                    </div>
                                </td>
                                <td class="p-4 text-slate-800 dark:text-white font-bold">@item.NameSurname</td>
                                <td class="p-4 text-slate-600 dark:text-slate-300">@item.TitleAndCompany</td>
                                <td class="p-4">
                                    @if (item.IsConfirm)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400">Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400">Beklemede</span>
                                    }
                                </td>
                                <td class="p-4 text-right">
                                    <a href="@Url.Action("UpdateTestimonial", "Testimonial", new { id = item.TestimonialId })" class="text-primary hover:underline text-sm font-medium mr-3">Düzenle</a>
                                    <a href="@Url.Action("DeleteTestimonial", "Testimonial", new { id = item.TestimonialId })" onclick="return confirm('Bu referansı silmek istediğinize emin misiniz?');" class="text-red-500 hover:underline text-sm font-medium">Sil</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="p-12 text-center text-slate-500 dark:text-slate-400">
                                <span class="material-symbols-outlined text-4xl mb-2 block opacity-50">format_quote</span>
                                Henüz referans eklenmemiş.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
